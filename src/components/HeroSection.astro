---
// Hero section with animated introduction
import type { ImageMetadata } from 'astro';
import hero_section from '../assets/hero-section.webp';
import { useTranslations } from '../i18n/ui';

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const heroData = {
  name: 'Max Santana',
  title: t('hero.subtitle'),
  description: t('hero.description'),
  image: hero_section
};
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden py-16 md:py-0">
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900 to-primary-700 dark:from-gray-900 dark:to-primary-900"></div>
  
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto relative z-10">
    <div class="text-white space-y-6 animate-fade-in text-center lg:text-left">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold leading-tight">
        {t('hero.title')} <span class="text-accent-400">{heroData.name}</span>
      </h1>
      
      <h2 class="text-xl md:text-3xl font-medium opacity-90 animate-delay-100">
        {heroData.title}
      </h2>
      
      <p class="text-base md:text-xl opacity-80 max-w-lg mx-auto lg:mx-0 animate-delay-200">
        {heroData.description}
      </p>
      
      <div class="pt-4 flex flex-wrap gap-4 justify-center lg:justify-start animate-delay-300">
        <!-- <a href="#projects" class="w-full sm:w-auto px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-medium rounded-lg transition-colors shadow-lg hover:shadow-xl text-center">
          {t('hero.viewWork')}
        </a> -->
        <!-- <a href="#contact" class="w-full sm:w-auto px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-medium rounded-lg backdrop-blur-sm transition-colors border border-white/20 text-center">
          {t('hero.cta')}
        </a> -->
        <a href="#contact" class="w-full sm:w-auto px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-medium rounded-lg transition-colors shadow-lg hover:shadow-xl text-center">
          {t('hero.cta')}
        </a>
      </div>
    </div>
    
    <div class="hidden lg:block">
      <div class="relative w-full h-[500px]">
        <div class="absolute top-0 right-0 w-4/5 h-4/5 bg-accent-500/20 rounded-3xl backdrop-blur-md animate-slide-in-right"></div>
        <div class="absolute bottom-0 left-0 w-4/5 h-4/5 border-2 border-white/20 rounded-3xl"></div>
        <img 
          src={heroData.image.src} 
          alt="Developer working" 
          class="absolute inset-0 m-auto w-4/5 h-4/5 object-cover rounded-2xl shadow-2xl animate-slide-up"
        />
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="text-white/80 hover:text-white">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
      </svg>
    </a>
  </div>
</section>

<style>
  .animate-delay-100 {
    animation-delay: 100ms;
  }
  
  .animate-delay-200 {
    animation-delay: 200ms;
  }
  
  .animate-delay-300 {
    animation-delay: 300ms;
  }
</style>